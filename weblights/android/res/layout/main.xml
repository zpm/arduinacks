<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <Button
        android:id="@+id/off"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="OFF"
        android:onClick="ChangeColor" />

    <EditText
        android:id="@+id/setTimeAtColor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
		android:hint="timeAtColor" />

    <EditText
        android:id="@+id/setTimePerStep"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number" 
        android:hint="timePerStep" />

    <Button
        android:id="@+id/fade"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Fade"
        android:onClick="ChangeColor" />
    <Button
        android:id="@+id/pink"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Pink"
        android:onClick="ChangeColor" />
    <Button
        android:id="@+id/blue"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Blue" 
        android:onClick="ChangeColor" />
    <Button
        android:id="@+id/red"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Red"
        android:onClick="ChangeColor" />
     <Button
        android:id="@+id/green"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Green"
        android:onClick="ChangeColor" />
     <Button
        android:id="@+id/yellow"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Yellow"
        android:onClick="ChangeColor" />
     <Button
        android:id="@+id/orange"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Orange"
        android:onClick="ChangeColor" />
     <Button
        android:id="@+id/cyan"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Cyan"
        android:onClick="ChangeColor" />
    <Button
        android:id="@+id/white"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="White"
        android:onClick="ChangeColor" />

</LinearLayout>